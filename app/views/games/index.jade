extends ../shared/template

block content
  .container
    .row.clearfix
        .col-md-12.column
          .page-header
            h1
              small Available Games
      .row.clearfix
        .col-md-12.column
          dl
            dt Number of Available Games
            dt= games.length
          form(action='/games', method='POST')
            button.btn.btn-info New Game
          table.table.table-hover
            thead
              tr
                th
                  | Users
                th
                  | Join a Game!
            tbody
              each game in games
                tr
                  td= game._id
                  td
                    a.btn.btn-success.btn-default.joingame(href='/games/#{game._id}') Join Game
